<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonHeaderPlay"
        style="@style/TextoConSombra"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@drawable/header"
        android:gravity="right|center"
        android:text="@string/titulo_question"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/textViewPlayingFor"
            style="@style/TextoConSombra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_playing_for"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewMoney"
            style="@style/TituloConSombra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_current"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <Button
                android:id="@+id/buttonOpcionA"
                style="@style/TextoConSombra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_opcion"
                android:text="@string/play_opcion_a"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonOpcionB"
                style="@style/TextoConSombra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_opcion"
                android:text="@string/play_opcion_b"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonOpcionC"
                style="@style/TextoConSombra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_opcion"
                android:text="@string/play_opcion_c"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonOpcionD"
                style="@style/TextoConSombra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_opcion"
                android:text="@string/play_opcion_d"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

</LinearLayout>